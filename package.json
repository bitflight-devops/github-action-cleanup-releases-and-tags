{
  "name": "@Broadshield/github-action-cleanup-releases-and-tags",
  "version": "1.0.0",
  "description": "This removes unused Tags and Releases that are created during the PR process",
  "main": "dist/index.js",
  "repository": "git@github.com:Broadshield/github-action-cleanup-releases-and-tags.git",
  "author": "Jamie Nelson <jamie@wearsafe.com>",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "license": "MIT",
  "type": "module",
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "private": true,
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@octokit/action": "^3.18.0",
    "@octokit/core": "^3.6.0",
    "@octokit/plugin-throttling": "^3.6.2",
    "@octokit/request": "^5.6.3",
    "@tsconfig/node16": "^1.0.2"
  },
  "devDependencies": {
    "@octokit/core": "^3.6.0",
    "@octokit/types": "^6.34.0",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@octokit/webhooks-types": "^5.5.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@typescript-eslint/typescript-estree": "^5.17.0",
    "@vercel/ncc": "^0.33.3",
    "esbuild": "^0.14.28",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-class-members": "^1.14.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "test": "NODE_ENV=testing jest",
    "start": "node ./src/index.js",
    "format": "prettier --write src/index.js",
    "package": "rimraf lib dist;esbuild src/index.ts --bundle --sourcemap --platform=node --outfile=dist/index.cjs --target=node16 --format=cjs"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/helpers/",
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run format && yarn run lint && yarn run build && git add dist index.js"
    }
  }
}
